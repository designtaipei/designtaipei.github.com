@charset 'UTF-8'

@import 'nib'
@import 'setting'

global-reset()

body
  background: #FFF
  color: #6d6d6d
  font-size: 14px
  font-family: '微軟正黑體', Microsoft JhengHei, Microsoft YaHei, LiHei Pro Medium

a
  text-decoration: none
  color: #0e5289

test
  color: #aaa

.container
  width: $container-width
  margin: 0 auto

.clear
  zoom: 1

  &:after
  &:before
    display: table
    content: ""
    zoom: 1
  
  &:after
    clear: both
 
#header
  height: $header-height
  position: relative
  overflow: hidden
  user-select: none

.header-logo
  position: absolute
  left: 50%
  top: 20px
  width: 117px
  height: 44px
  margin-left: -428px
  z-index: 3
  background: url('../images/logo_m.png')

.header-center
  height: $header-height
  position: relative

.header-conveyor
  position: absolute
  z-index: 1
  white-space: nowrap
  left: 0
  top: 0

.header-conveyor-item
  display: inline-block
  background-position: center center
  width: $container-width
  height: $header-height
  overflow: hidden

.header-mask
  position: absolute
  z-index: 2
  background: #5b5b5b
  opacity: 0.4
  width: 50%
  height: 100%
  top: 0
  
  &-right
    left: 50%
    margin-left: ($container-width / 2)

  &-left
    right: 50%
    margin-right: ($container-width / 2)

.header-prev-btn
.header-next-btn
  position: absolute
  z-index: 3
  width: 63px
  height: 63px
  top: 50%
  margin-top: -31px
  cursor: pointer
  text-indent: -100%
  overflow: hidden

.header-prev-btn
  left: 20px
  background: url('../images/button_left.png')

.header-next-btn
  right: 20px
  background: url('../images/button_right.png')

#bar
  height: 50px
  background: #f2f2f2
  color: #7a7a7a

  a
    color: #7a7a7a

.bar-menu-tag
  position: absolute
  display: block
  height: 100%
  width: 100%
  left: 0
  bottom: 100%
  z-index: -1
  transition: bottom .5s ease

.bar-menu
  width: 600px

.bar-menu-item
  float: left
  font-weight: bold

  a
    position: relative
    float: left
    height: 100%
    line-height: 50px
    padding: 0 10px
    z-index: 0

  &:hover
  &.current
    .bar-menu-tag
      bottom: 0

.bar-menu-logo
  background: url($bar-menu-logo) no-repeat left center
  width: $bar-menu-logo-width
  height: $bar-menu-logo-height

.bar-social
  width: 200px
  height: 25px
  float: right
  margin-top: 11px

  [class~=" bar-social-"]
  [class^="bar-social-"]
    float: right
    overflow: hidden
    width: 26px
    height: 26px
    text-indent: 999px
    background-position: 0 0
    background-repeat: no-repeat
    margin-left: 5px

    &:hover
      background-position: 0 -25px

    a
      float: left
      width: 100%
      height: 100%

.bar-social-pinterest
  background-image: url('../images/icon01.png')

.bar-social-facebook
  background-image: url('../images/icon02.png')

.bar-social-youtube
  background-image: url('../images/icon03.png')

#main
  margin: 60px 0 100px

.main-post-list
  margin-left: -10px

  &:after
    clear: both

.main-post
  float: left
  width: 205px
  margin-left: 10px

  img
    max-width: 205px
    height: auto

.main-post-single
  width: 100%

  img
    max-width: auto
    height: auto

.main-post-title
  color: #282828
  line-height: 20px
  margin-top: 5px
 
.main-post-img
  box-sizing: border-box
  border: 1px #e6e6e6 solid

#footer
  background: #f2f2f2
  text-align: center
  padding: 10px 0

.footer-btn
  display: inline-block
  margin: 0 10px

.footer-copyright
  line-height: 24px
  margin: 10px auto 0
  width: 300px
  font-size: 12px
  color: #999

.pagination
  margin-top: 20px
  height: 30px
  line-height: 30px
  position: relative

.pagination-next
.pagination-prev
  position: absolute

  a
    display: block
    height: 30px
    border-bottom: 2px #EEE solid

    &:hover
      border-color: #CCC

.pagination-next
  left: 0

.pagination-prev
  right: 0

.content-section
  margin-bottom: 100px

  &:after
    content: ""
    display: block
    clear: both

.content-section-title
  position: relative
  line-height: 30px
  padding: 10px
  margin-right: 9px
  margin-bottom: 20px
  background: #F2F2F2

  for color in $tit-color-names
    $_color = lookup('$tit-color-' + color)

    &.{color}
      background: $_color[0]
      color: $_color[1]

      if $_color[2]
        text-shadow: 0 1px 1px rgba(0, 0, 0, .3)

      .content-section-title-tit
        background: url('../images/tit_right_' + color + '.png')

.content-section-title-tit
  position: absolute
  width: 9px
  height: 100%
  right: -9px
  top: 0
  background: url(../images/tit_right.png)

.content-section-title-container
  overflow: hidden

  .content-section-title
    float: left

.content-section-entry
  width: 688px
  margin: 0 auto

.article-content
  line-height: 24px
  letter-spacing: 1px

  for i in 1 2 3 4
    h{i}
      line-height: 100%

  h1
    font-size: 32px

  h2
    font-size: 28px

  h3
    font-size: 24px

  h4
    font-size: 18px

  p
    margin-bottom: 10px

.notes-background
  background: url(../images/bg_paper.jpg)
  background-position: -1px -1px

.contain-wrapper
  &:after
    content: ''
    display: block
    clear: both

/** pages **/
@import 'pages'
